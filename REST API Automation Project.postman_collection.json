					"script": {
						"exec": [
							"// 1. Validate Resource Creation (Status 201)\r",
							"pm.test(\"Status code is 201 Created\", function () {\r",
							"    pm.response.to.have.status(201);\r",
							"});\r",
							"\r",
							"// 2. Validate Performance (Response Time)\r",
							"pm.test(\"Creation request is fast (below 1200ms)\", function () {\r",
							"    pm.expect(pm.response.responseTime).to.be.below(1200);\r",
							"});\r",
							"\r",
							"// 3. Verify Data Integrity in Response\r",
							"pm.test(\"Response body matches the sent user data\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.name).to.eql(\"Salma QA Engineer\");\r",
							"    pm.expect(jsonData.username).to.eql(\"salma_tester\");\r",
							"});\r",
							"\r",
							"// 4. Verify Server-Side ID Generation\r",
							"pm.test(\"Server generated a unique ID for the new user\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData).to.have.property('id');\r",
							"    pm.expect(jsonData.id).to.be.a('number');\r",
							"});"
						],
