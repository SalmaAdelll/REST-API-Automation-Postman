	"item": [
		{
			"name": "Request 1 (Single User)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// 1. Validate HTTP Status Code\r",
							"pm.test(\"Status code is 200 OK\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"// 2. Validate Response Time (Performance Testing)\r",
							"pm.test(\"Response time is within acceptable limits (below 1000ms)\", function () {\r",
							"    pm.expect(pm.response.responseTime).to.be.below(1000);\r",
							"});\r",
							"\r",
							"// 3. Validate Data Integrity (Checking specific fields)\r",
							"pm.test(\"Verify User ID and identity accuracy\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.id).to.eql(1);\r",
							"    pm.expect(jsonData.name).to.be.a('string').and.eql(\"Leanne Graham\");\r",
							"});\r",
							"\r",
							"// 4. Validate Response Schema (Checking object structure)\r",
							"pm.test(\"Verify response contains expected user object keys\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData).to.have.all.keys('id', 'name', 'username', 'email', 'address', 'phone', 'website', 'company');\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
